<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="pmnts_gateway" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>PMNTS</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>

                <field id="order_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>New Order Status</label>
                    <source_model>PMNTS\Gateway\Model\Config\Source\Order\Status\Pendingpayment</source_model>
                </field>

                <field id="auth_type" translate="label" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment Action</label>
                    <source_model>PMNTS\Gateway\Model\Source\Action</source_model>
                </field>

                <field id="sandbox_mode" translate="label" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            
                <field id="visible_card_types" translate="label" type="multiselect" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Credit Card Types</label>
                    <source_model>PMNTS\Gateway\Model\Source\Cctype</source_model>
                </field>

                <field id="direct_post_tokenization" translate="label" type="select" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>IFRAME Tokenization</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="iframe_css" translate="label" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>IFRAME Stylesheet URL</label>
                    <depends>
                        <field id="direct_post_tokenization">1</field>
                    </depends>
                </field>

                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>


                <field id="specificcountry" translate="label" type="multiselect" sortOrder="41" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>

                <field id="customer_save_credit_card" translate="label" type="select" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer can save Credit Card</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="username" translate="label" type="text" sortOrder="26" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Username</label>
                </field>

                <field id="token" translate="label" type="text" sortOrder="27" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Token</label>
                </field>

                <field id="shared_secret" translate="label" type="text" sortOrder="28" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Shared Secret</label>
                </field>

                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>

                <field id="fraud_detection_enabled" translate="label" type="select" sortOrder="101" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Fraud Detection</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="fraud_ship_lowcost" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - Low Cost</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
                <field id="fraud_ship_sameday" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - Same Day</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
                <field id="fraud_ship_overnight" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - Overnight</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
                <field id="fraud_ship_express" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - Express</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
                <field id="fraud_ship_international" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - International</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
                <field id="fraud_ship_pickup" translate="label" type="multiselect" sortOrder="102" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Fraud Shipping Map - Pickup</label>
                    <source_model>PMNTS\Gateway\Model\Source\EnabledMethods</source_model>
                    <depends>
                        <field id="fraud_detection_enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
